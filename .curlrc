# Always follow redirects
location

# Show progress bar by default (instead of a series of #)
progress-bar

# Fail silently on server errors (no HTML error pages printed)
fail

# Timeout settings
connect-timeout = 10
max-time = 60

# Enable compression (saves bandwidth if server supports it)
compressed

# Display errors if they occur
show-error

# Limit maximum redirects to prevent loops
max-redirs = 10
